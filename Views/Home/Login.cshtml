@model User
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-sm ">
    <form style="width: 300px;" method="post" class="border border-dark p-3" asp-action="LoginUser" asp-controller="Register">
        <h1 class="text-center">Login</h1>
        <div class="form-group mb-4">
            <label asp-for="Name">Username</label>
            <input asp-for="Name" type="text" class="form-control" required="" />
        </div>
        <div class="form-group mb-4">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control" required="" />
        </div>
        <div class="text-center mt-4">
            <button type="submit" value="Register" class="btn btn-outline-info">Login</button>
        </div>
    </form>
</div>

