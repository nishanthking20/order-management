@model User
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* Add your CSS styles here */
        form {
            border-radius: 10px;
            background: #9D50BB;  /* fallback for old browsers */
            background: -webkit-linear-gradient(to right, #6E48AA, #9D50BB);  /* Chrome 10-25, Safari 5.1-6 */
            background: linear-gradient(to right, #6E48AA, #9D50BB); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

            min-height: 400px;
            width: 400px;
            border: 1px solid #808080;
            padding: 30px;
            color: white;
        }

        form div {
            padding: 5px;
        }

        input[type="text"],
        input[type="email"],
        input[type="password"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <form method="post" asp-action="RegisterUser" asp-controller="Register">
        <h1 class="text-center">Registration</h1>
        <div class="form-group">
            <label asp-for="Name">Username</label>
            <input asp-for="Name" type="text" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" type="email" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Confirm Password</label>
            <input asp-for="ConfirmPassword"  type="password" class="form-control" required />
        </div>
        <div class="text-center">
            <button type="submit" value="Register">Register</button>
        </div>
    </form>
</body>
</html>
