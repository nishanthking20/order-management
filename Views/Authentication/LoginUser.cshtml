@model User
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-sm ">
    <form style="width: 300px;" method="post" class="border border-dark p-3 rounded" asp-action="LoginUser" asp-controller="Authentication">
        <h1 class="text-center">Login</h1>
        @if (TempData["LoginAlertMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["LoginAlertMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="form-group mb-4">
            <label asp-for="Name">Username</label>
            <input asp-for="Name" type="text" class="form-control" required="" />
        </div>
        <div class="form-group mb-4">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control" required="" />
        </div>
        <div class="text-center mt-4">
            <button type="submit" value="Register" class="btn btn-outline-info">Login</button>
        </div>
    </form>
</div>

