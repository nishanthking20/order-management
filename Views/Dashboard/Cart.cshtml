@model List<Item>
@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Dashboard/Dashboard.cshtml";
}

<div class="container">
    <h1>Shopping Cart</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ItemName</td>
                    <td>@item.Quantity</td>
                    <td>₹@item.Price</td>
                    <td>₹@(item.Price * item.Quantity)</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3"><strong>Total Amount</strong></td>
                <td><strong>₹@Model.Sum(i => i.Price * i.Quantity)</strong></td>
            </tr>
        </tfoot>
    </table>
    <form method="post" asp-controller="Dashboard" asp-action="AddToHistory">
        <button type="submit" class="btn btn-primary">Buy Now</button>
    </form>
</div>
